<?xml version="1.0" encoding="UTF-8"?>
<sitecatalog xmlns="http://pegasus.isi.edu/schema/sitecatalog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://pegasus.isi.edu/schema/sitecatalog http://pegasus.isi.edu/schema/sc-4.1.xsd" version="4.1">

   <!-- The local site contains information about the submit host -->
   <site handle="local" arch="x86_64" os="LINUX">
      <!-- This is where intermediate data will be stored -->
      <directory type="shared-scratch" path="${PWD}/scratch">
         <file-server operation="all" url="file://${PWD}/scratch"/>
      </directory>

      <!-- This is where output data will be stored -->
      <directory type="shared-storage" path="${PWD}/output">
         <file-server operation="all" url="scp://ldm@casa-denton3.noaa.unt.edu${PWD}/output"/>
      </directory>

      <profile namespace="pegasus" key="SSH_PRIVATE_KEY">/home/ldm/.ssh/storage_rsa</profile>
   </site>

   <site handle="condorpool" arch="x86_64" os="LINUX">
      <!-- This is where intermediate data will be stored -->
      <directory type="shared-scratch" path="/scratch">
         <file-server operation="get" url="http://casa-dtn/~ldm/scratch"/>
         <file-server operation="put" url="scp://ldm@casa-dtn/home/ldm/public_html/scratch"/>
      </directory>

      <!-- These profiles tell Pegasus that the site is a plain Condor pool -->
      <profile namespace="pegasus" key="style">condor</profile>
      <profile namespace="pegasus" key="data.configuration">nonsharedfs</profile>
      <profile namespace="condor" key="universe">vanilla</profile>
      <profile namespace="pegasus" key="auxillary.local">true</profile>

      <profile namespace="pegasus" key="clusters.size">12</profile>
      <profile namespace="pegasus" key="cores">4</profile>

      <profile namespace="env" key="PEGASUS_TRANSFER_PUBLISH">1</profile>
      <profile namespace="env" key="PEGASUS_AMQP_URL">amqp://panorama:panorama@casa-dtn:5673/panorama/monitoring</profile>
      <profile namespace="pegasus" key="SSH_PRIVATE_KEY">/home/ldm/.ssh/storage_rsa</profile>
   </site>

   <site handle="condorpool_nfs" arch="x86_64" os="LINUX">
      <!-- This is where intermediate data will be stored -->
      <directory type="shared-scratch" path="/nfs/shared/ldm/scratch">
         <file-server operation="all" url="file:///nfs/shared/ldm/scratch"/>
      </directory>
      <!-- This is where output data will be stored -->
      <directory type="shared-storage" path="/nfs/shared/ldm/output">
         <file-server operation="all" url="file:///nfs/shared/ldm/output"/>
      </directory>

      <!-- These profiles tell Pegasus that the site is a plain Condor pool -->
      <profile namespace="pegasus" key="style">condor</profile>
      <profile namespace="pegasus" key="data.configuration">nonsharedfs</profile>
      <profile namespace="condor" key="universe">vanilla</profile>

      <profile namespace="pegasus" key="clusters.size">12</profile>
      <profile namespace="pegasus" key="cores">4</profile>

      <profile namespace="env" key="PEGASUS_TRANSFER_PUBLISH">1</profile>
      <profile namespace="env" key="PEGASUS_AMQP_URL">amqp://panorama:panorama@casa-dtn:5673/panorama/monitoring</profile>
   </site>

   <site handle="casa-dtn" arch="x86_64" os="LINUX">
      <!-- This is where output data will be stored -->
      <directory type="shared-storage" path="/output/hail">
         <file-server operation="get" url="http://casa-dtn/~ldm/output/hail"/>
         <file-server operation="put" url="scp://ldm@casa-dtn/home/ldm/public_html/output/hail"/>
      </directory>

      <profile namespace="pegasus" key="SSH_PRIVATE_KEY">/home/ldm/.ssh/storage_rsa</profile>
   </site>

</sitecatalog>

